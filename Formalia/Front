        </form>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault();
            var userType = prompt('¿Eres empleado o empleador?');
            if (userType.toLowerCase() === 'empleado') {
                document.body.innerHTML = `
                <div class="container">
                    <h2>Escoge tu área de trabajo</h2>
                    <div class="button-container">
                        <button onclick="showEmailForm('Arreglar Uñas')">Arreglar Uñas</button>
                        <button onclick="showEmailForm('Arreglar Casas')">Arreglar Casas</button>
                        <button onclick="showEmailForm('Hacer Comidas')">Hacer Comidas</button>
                        <button onclick="showEmailForm('Cuidar Niños')">Cuidar Niños</button>
                    </div>
                    <div class="email-form" style="display:none;" id="emailForm">
                        <h2>Danos tu correo electrónico para enviarte información</h2>
                        <input class="email-input" type="text" id="email" name="email" placeholder="Tu correo electrónico">
                        <button onclick="sendEmail()">Enviar</button>
                    </div>
                </div>`;
            } else if (userType.toLowerCase() === 'empleador') {
                document.body.innerHTML =`
                <div class="container2">
                    <h2>¿A quién deseas contratar?</h2>
                    <div class="button-container">
                        <button onclick="showEmailForm('Manicurista')">Manicurista</button>
                        <button onclick="showEmailForm('Limpiador')">Limpiador</button>
                        <button onclick="showEmailForm('Cocinero')">Cociner</button>
                        <button onclick="showEmailForm('Niñero/a')">Niñera</button>
                    </div>
                    <div class="email-form" style="display:none;" id="emailForm">
                        <h2>Escribe tu correo electronico, lo pondremos en contacto con el empleado</h2>
                        <input class="email-input" type="text" id="email" name="email" placeholder="Tu correo electrónico">
                        <button onclick="sendEmail_Two()">Enviar</button>
                    </div>
                </div>`;
            } else {
                alert('Opción no válida. Por favor, seleccione "empleado" o "empleador".');
            }
        });

        function showEmailForm(area) {
            document.getElementById('emailForm').style.display = 'block';
        }

        function sendEmail() {
            // Aquí puedes agregar el código para enviar el correo electrónico
            alert('Correo electrónico enviado. Un empleador se pondrá en contacto contigo pronto.');
        }
        function sendEmail_Two() {
            // Aquí puedes agregar el código para enviar el correo electrónico
            alert('Correo electrónico enviado. Lo pondremos en contacto');
        }
    </script>

